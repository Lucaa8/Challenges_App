<UserControl x:Class="Challenges_App.Controls.TrimArmorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Challenges_App.Controls"
             mc:Ignorable="d">
    <Grid>
        <Grid HorizontalAlignment="Center" VerticalAlignment="Top">
            <Label Content="Actif" Style="{StaticResource lblFont1}" FontSize="25" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <CheckBox x:Name="cbActive" Content="Non" IsChecked="False" Width="100" Height="14" HorizontalAlignment="Left" Style="{StaticResource lblFont1}" FontSize="15" Margin="100,0,0,0" VerticalAlignment="Center" Click="cbActive_Click">
                <CheckBox.LayoutTransform>
                    <ScaleTransform ScaleX="1.5" ScaleY="1.5"/>
                </CheckBox.LayoutTransform>
            </CheckBox>
        </Grid>
        <Grid Margin="{Binding Spacing1,RelativeSource={RelativeSource AncestorType=UserControl},Converter={StaticResource SpacingToMarginConverter}}" HorizontalAlignment="Center" VerticalAlignment="Top">
            <Label Content="Motif" FontSize="25" HorizontalAlignment="Left" VerticalAlignment="Top" Style="{StaticResource lblFont1}"/>
            <ComboBox x:Name="cbxPattern" IsEnabled="False" SelectedIndex="-1" Margin="100,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="20" Width="150" Height="28" Style="{StaticResource lblFont1}" SelectionChanged="cbxPattern_SelectionChanged">
                <ComboBoxItem Tag="COAST" Content="Coast"/>
                <ComboBoxItem Tag="DUNE" Content="Dune"/>
                <ComboBoxItem Tag="EYE" Content="Eye"/>
                <ComboBoxItem Tag="HOST" Content="Host"/>
                <ComboBoxItem Tag="RAISER" Content="Raiser"/>
                <ComboBoxItem Tag="RIB" Content="Rib"/>
                <ComboBoxItem Tag="SENTRY" Content="Sentry"/>
                <ComboBoxItem Tag="SHAPER" Content="Shaper"/>
                <ComboBoxItem Tag="SILENCE" Content="Silence"/>
                <ComboBoxItem Tag="SNOUT" Content="Snout"/>
                <ComboBoxItem Tag="SPIRE" Content="Spire"/>
                <ComboBoxItem Tag="TIDE" Content="Tide"/>
                <ComboBoxItem Tag="VEX" Content="Vex"/>
                <ComboBoxItem Tag="WARD" Content="Ward"/>
                <ComboBoxItem Tag="WAYFINDER" Content="Wayfinder"/>
                <ComboBoxItem Tag="WILD" Content="Wild"/>
            </ComboBox>
        </Grid>
        <Grid Margin="{Binding Spacing2,RelativeSource={RelativeSource AncestorType=UserControl},Converter={StaticResource SpacingToMarginConverter}}" HorizontalAlignment="Center" VerticalAlignment="Top">
            <Label Content="Materiel" FontSize="25" HorizontalAlignment="Left" VerticalAlignment="Top" Style="{StaticResource lblFont1}"/>
            <ComboBox x:Name="cbxMaterial" IsEnabled="False" SelectedIndex="-1" Margin="100,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="20" Width="150" Height="28" Style="{StaticResource lblFont1}" SelectionChanged="cbxMaterial_SelectionChanged">
                <ComboBoxItem Tag="AMETHYST" Content="Amethyst Shard"/>
                <ComboBoxItem Tag="COPPER" Content="Copper Ingot"/>
                <ComboBoxItem Tag="DIAMOND" Content="Diamond"/>
                <ComboBoxItem Tag="EMERALD" Content="Emerald"/>
                <ComboBoxItem Tag="GOLD" Content="Gold Ingot"/>
                <ComboBoxItem Tag="IRON" Content="Iron Ingot"/>
                <ComboBoxItem Tag="LAPIS" Content="Lapis Lazuli"/>
                <ComboBoxItem Tag="NETHERITE" Content="Netherite Ingot"/>
                <ComboBoxItem Tag="QUARTZ" Content="Quartz"/>
                <ComboBoxItem Tag="REDSTONE" Content="Redstone"/>
            </ComboBox>
        </Grid>
    </Grid>
</UserControl>
